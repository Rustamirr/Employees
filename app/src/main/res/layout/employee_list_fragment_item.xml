<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/employee_list_fragment_item_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/avatar"
                tools:srcCompat="@mipmap/ic_launcher"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"/>

        <TextView
                android:id="@+id/employee_list_fragment_item_first_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAppearance="@android:style/TextAppearance.Medium"
                tools:text="First name"
                app:layout_constraintStart_toEndOf="@+id/employee_list_fragment_item_avatar"
                android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@+id/employee_list_fragment_item_avatar"/>

        <TextView
                android:id="@+id/employee_list_fragment_item_last_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:maxLines="1"
                android:textAppearance="@android:style/TextAppearance.Small"
                tools:text="Last name" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/employee_list_fragment_item_first_name"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toEndOf="@+id/employee_list_fragment_item_avatar"
                android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>

        <TextView
                android:id="@+id/employee_list_fragment_item_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAppearance="@android:style/TextAppearance.Small"
                tools:text="Age" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/employee_list_fragment_item_last_name"
                app:layout_constraintStart_toEndOf="@+id/employee_list_fragment_item_avatar"
                android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


